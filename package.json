{
  "name": "accessibility-everywhere",
  "version": "1.0.0",
  "description": "Comprehensive platform to make web accessibility a search engine ranking factor",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "setup": "npm install && npm run setup:db",
    "setup:db": "node scripts/setup-arangodb.js",
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "accessibility",
    "a11y",
    "wcag",
    "aria",
    "web-standards",
    "search-ranking"
  ],
  "author": "Accessibility Everywhere Initiative",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0"
  }
}
